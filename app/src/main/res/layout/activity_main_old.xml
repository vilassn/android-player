<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:id="@+id/relativeLayout"
              android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/txtVw1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/now_playing"/>
        <TextView
                android:id="@+id/txtSname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textview"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/cover_art"
            android:contentDescription="@string/todo"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/txtCurTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_00_00" android:rotationX="0"/>
        <SeekBar
                android:id="@+id/sBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/txtTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_00_00"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        <ImageButton
                android:id="@+id/btnBackward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_rew"
                android:contentDescription="@string/todo"/>
        <ImageButton
                android:id="@+id/btnPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_play"
                android:contentDescription="@string/todo"/>
        <ImageButton
                android:id="@+id/btnPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_pause"
                android:contentDescription="@string/todo"/>
        <ImageButton
                android:id="@+id/btnForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_ff"
                android:contentDescription="@string/todo"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioGrp">
            <RadioButton
                    android:text="AudioTrack_MODE_STATIC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioBtnStatic"/>
            <RadioButton
                    android:text="AudioTrack_MODE_STREAM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioBtnStream"/>
        </RadioGroup>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnStart" android:layout_weight="1"/>
            <Button
                    android:text="Stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnStop" android:layout_weight="1"/>
            <Button
                    android:text="Offload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnOffload"/>
            <Button
                    android:text="Wav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnWav" android:layout_weight="1"/>
            <Button
                    android:text="SoundPool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnSoundPool" android:onClick="playSound"/>
            <Button
                    android:text="SoundPool2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnSoundPool2" android:onClick="playSound"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>